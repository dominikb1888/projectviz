{
  "name": "FastAPI Codespace",
  "image": "python:3.11.5-slim",
  "forwardPorts": [8000],
  "extensions": [
    "ms-python.python",
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode"
  ],
  "settings": {
    "terminal.integrated.cwd": "/workspaces/projectviz"
  },
  "postCreateCommand": "pip install -r /workspaces/projectviz/requirements.txt && uvicorn main:app --host 0.0.0.0 --port 8000"
}

